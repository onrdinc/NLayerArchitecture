
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyanızın yolunu belirtin
}

<div class="container login-container">
    <div class="card login-card" ng-init="user.add();">
        <h2>Giriş Yap</h2>
        <form ng-repeat="d in user.detail">
            <div class="form-group">
                <label for="email">E-posta Adresi</label>
                <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" ng-model="d.email">
            </div>
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin" ng-model="d.password">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary login-btn" ng-click="user.token();">Giriş Yap</button>
            </div>
            <p class="text-center">
                Hesabın Yokmu?
                <a class="text-decoration-none" href="/#!/signUp">Hesap Oluştur</a>
            </p>
        </form>
    </div>
</div>




